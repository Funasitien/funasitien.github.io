---
import Layout from "../layouts/main.astro";
import { Icon } from "astro-icon/components";

import HeroLeft from "../components/HeroLeft.astro";
import HeroRight from "../components/HeroRight.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";
---

<Layout title="404">
    <div class="min-h-[75vh] flex justify-center items-center flex-col md:flex-row max-w-full">
        <img class="w-64 h-64" src="/renders/box_construction.png" alt="Rendu 3D 1" />
        <div>
            <h1 class="text-6xl text-center font-bold">404</h1>
            <h3 class="text-base magic text-center">Erreur dans la Matrix</h3>
            <p class="text-lg text-center">Il semblerez que vous vous soyez perdu,
            <br/>ou que cette page a été récemment supprimé.
            </p>
            <div class="flex justify-center w-screen gap-2 mt-2">
              <button onclick="history.back()" class="btn">
                <Icon name="tabler:arrow-back-up" class="text-xl"/> Retour
              </button>
              <a href="/" class="btn btn-primary">
                <Icon name="tabler:home-filled" class="text-xl"/> Accueil
              </a>
            </div>
        </div>
        <img class="w-64 h-64" src="/renders/under_construction.png" alt="Rendu 3D 2" />
    </div>
</Layout>
