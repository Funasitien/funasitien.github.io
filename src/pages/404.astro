---
import Layout from "../layouts/main.astro";
import { Icon } from "astro-icon/components";

import HeroLeft from "../components/HeroLeft.astro";
import HeroRight from "../components/HeroRight.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";
---

<Layout title="404">
    <div class="min-h-[75vh] flex justify-center items-center flex-col md:flex-row">
        <img class="w-64 h-64" src="/renders/box_construction.png" alt="Rendu 3D 1" />
        <div>
            <h1 class="text-6xl text-center font-bold">404</h1>
            <h3 class="text-base magic text-center">Erreur dans la Matrix</h3>
            <p class="text-lg text-center">Il semblerez que vous vous soyez perdu,
            <br/>où que cette page a été récemment supprimé.
            </p>
            <div class="flex justify-center w-screen">
              <a class="btn"></a>
              <a class="btn btn-primary"></a>
            </div>
        </div>
        <img class="w-64 h-64" src="/renders/under_construction.png" alt="Rendu 3D 2" />
    </div>
</Layout>
