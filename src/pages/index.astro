---
import Layout from "../layouts/main.astro";
import { Icon } from "astro-icon/components";

import HeroLeft from "../components/HeroLeft.astro";
import HeroRight from "../components/HeroRight.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";
---

<Layout title="Funasitien DreamCloud">
    <div class="min-h-[75vh] flex justify-center items-center flex-col md:flex-row">
        <img class="w-64 h-64" src="/renders/box_construction.png" alt="Rendu 3D 1" />
        <div>
            <h1 class="text-4xl font-bold">En construction</h1>
            <p class="text-lg">Version de développement du portfolio.</p>
        </div>
        <img class="w-64 h-64" src="/renders/under_construction.png" alt="Rendu 3D 2" />
    </div>
    <HeroLeft
        title="Funasitien DreamCloud"
        alt="Developpeur Web Fullstack"
        image_url="/emojis/Writing Hand.png"
        image_text="Emoji d'une main qui écrit"
        button_text="#"
        icon="#"
        >
        Bonjour ! Moi c'est Funasitien, développeur, graphiste et modélisateur depuis 2018
    </HeroLeft> 
    <ProjectsGrid/>
    <HeroRight
        title="Funasitien DreamCloud"
        alt="Developpeur Web Fullstack"
        image_url="/emojis/Writing Hand.png"
        image_text="Emoji d'une main qui écrit"
        button_text="#"
        icon="#"
        >
        Bonjour ! Moi c'est Funasitien, développeur, graphiste et modélisateur depuis 2018
    </HeroRight>
</Layout>
