---
const { title, description, image, base = "col-span-1"} = Astro.props;
---

<!-- Card -->
<div
  class:list={['card flex relative group rounded-lg shadow-lg overflow-hidden', base]}
  >
  <!-- Custom Image Background -->
  <img
    src={image}
    alt={title}
    class="object-cover"
  />
  <!-- Text Info on Hover -->
  <div

    class="absolute bottom-0 left-0 w-full px-4 py-2 text-white opacity-0 group-hover:opacity-100 transition-opacity bg-black bg-opacity-50">
    <h2 class="text-lg font-semibold">
      {title}
    </h2>
    <p class="text-sm">
      {description}
    </p>
  </div>
</div>
