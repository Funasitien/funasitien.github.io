---
import { Icon } from "astro-icon/components";
---

<div
  class="navbar bg-transparent md:px-64">
  <div class="navbar-start m-4">
    <a href="/" class="text-xl py-2 px-4 rounded-btn hover:border-neutral-content hover:bg-neutral inline-flex flex-wrap items-center gap-4 border-base-300 border-4 border-dashed transition-all duration-500 ease-in-out">
      Funasitien
    </a>
  </div>

  <div class="navbar-end">
    <div class="py-1 px-4 rounded-btn hover:bg-neutral hover:border-neutral-content inline-flex flex-wrap items-center gap-4 border-base-300 border-4 border-dashed transition-all duration-500 ease-in-out">
      <a class="link link-hover decoration-dashed decoration-2">
        Home
      </a>
      <a class="link link-hover decoration-dashed decoration-2">
        About
      </a>
      <a class="link link-hover decoration-dashed decoration-2">
        Contact
      </a>
      <button
        class="p-1 pr-2"
        data-toggle-theme="pastel,night"
        data-act-class="pastel"
        aria-label="Theme Switcher">
        <Icon name="mingcute:sun-fill" class="dark:hidden text-3xl" />
        <Icon name="mingcute:moon-fill" class="hidden dark:block text-3xl" />
      </button>
    </div>
  </div>
</div>
