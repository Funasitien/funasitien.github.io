---
import { Icon } from "astro-icon/components";

const {
  name,
  icon,
  color = "bg-base-300 border-neutral",
} = Astro.props;
---
<div class=`border-4 border-dashed rounded-2xl p-4 flex flex-col justify-center items-center ${color}`>
    <Icon name={ icon } class="text-4xl" />
    <h1 class="text-xl">{ name }</h1>
</div>

